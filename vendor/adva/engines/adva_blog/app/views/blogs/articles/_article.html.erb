<% if article %>
  <div id="<%= dom_id(article) %>" class="entry clearing">
          <div class="articleTitle"><%= link_to_content article %></div> 
  	  <div class="articleHeader">
  	    <span class="title">Date:</span> <%= datetime_with_microformat(article.published_at, :format => "%m/%e/%G @ %I:%M%p") %> | 
  	    <span class="title">Author:</span> <%= t(:'adva.blog.attribution', :author => article.author_name) %> | 
    	  <%= link_to_content_comments article if (article.accept_comments? || article.comments.present?) && mode != :single %><br />
           
          <div class="articleLinks">
         	<%= links_to_content_categories article, :'adva.common.content_categories' %>
         	<%= links_to_content_tags article, :'adva.common.content_tags' %>
      	 </div>
          </div>
        <br />

  	<div class="articleContent">
    	
  	  <% if article.has_excerpt? %>
  	    <%= article.excerpt_html %>
  	    <p><%= link_to_content t( :'adva.blog.links.more' ), article unless mode == :single %></p>
  	  <% end %>
          <%= article.body_html if mode == :single || !article.has_excerpt? %>
	</div>
  </div>
  <div class="seperate">&nbsp;</div>
<% end %>